{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "CommonJS",
      "target": "es6",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "declaration": true,
      "declarationDir": "./dist",
      "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  